<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="input">
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:background">
            @drawable/input_azul
        </item>
        <item name="android:padding">
            15dp
        </item>
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textColorHint">
            @color/color_hint
        </item>
    </style>

    <style name="label_form">
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:layout_marginBottom">
            7dp
        </item>
        <item name="android:textColor">
            #37474F
        </item>
    </style>

    <style name="button_login">
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="backgroundTint">
            @color/cor_principal
        </item>
        <item name="android:padding">
            5dp
        </item>
        <item name="android:background">
            @drawable/input_azul
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:textAllCaps">
            false
        </item>
    </style>
    
    <style name="txtTituloActivity">
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>

    <style name="txtSubTituloActivity">
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:textColor">
            @color/cor_principal
        </item>
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:paddingBottom">
            10dp
        </item>
    </style>
    
    <style name="txtConteudoActivity">
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:lineSpacingExtra">
            3dp
        </item>
    </style>

    <style name="header_button">
        <item name="android:background">
            @drawable/input_azul
        </item>
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:textColor">
            @color/cor_principal
        </item>
        <item name="android:fontFamily">
            @font/raleway
        </item>
        <item name="android:text">
             @string/txtAdicionar
        </item>
        <item name="android:textSize">
            10sp
        </item>
        <item name="android:lineSpacingExtra">
            3dp
        </item>
        <item name="android:textAllCaps">
            false
        </item>
        <item name="backgroundTint">
            @color/color_background
        </item>
    </style>
</resources>