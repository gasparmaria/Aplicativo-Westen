<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.westen">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Westen"
        tools:ignore="AllowBackup">
        <activity
            android:name=".Activities.ProjetoListarActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ProjetoDetalhesActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.FuncionarioListarActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ClienteListarActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.PerfilActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ProjetoCadastroActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.FuncionarioCadastroActivity"
            android:exported="false" />
        <activity android:name=".Activities.ClienteCadastroActivity" />
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SobreActivity" />
    </application>

</manifest>